<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationCard"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="@color/listViewBackColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|left"
    android:clickable="true"
    android:id="@+id/notificationContainer">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_alignParentTop="true"
        android:src="@drawable/homedialog_img_notification"
        android:scaleType="centerCrop"
        android:id="@+id/image_notification"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="27 Dec,16"
        android:textSize="14sp"
        android:layout_marginRight="8dp"
        android:id="@+id/notificationDate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_notification"
        android:layout_marginTop="14dp"
        android:id="@+id/notifiedCompanyName"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 students"
        android:id="@+id/numOfStudentsNotified"
        android:layout_toRightOf="@id/image_notification"
        android:layout_below="@id/notifiedCompanyName"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin"
        android:id="@+id/notifiedBy"
        android:layout_toRightOf="@id/image_notification"
        android:layout_below="@id/numOfStudentsNotified"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="16sp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>