<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/viewcompany_container"

    card_view:cardBackgroundColor="@color/listViewBackColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

    <RelativeLayout
        android:id="@+id/viewCompanyConatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:clickable="true">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:id="@+id/checkbox"
      />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_circle_company"
        android:tint="#00FF00"
        android:scaleType="centerCrop"
        android:id="@+id/image_companyStatus"
        android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="G"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_alignLeft="@id/image_companyStatus"
            android:layout_alignRight="@id/image_companyStatus"
            android:layout_alignBottom="@id/image_companyStatus"
            android:layout_alignTop="@id/image_companyStatus"
            android:id="@+id/viewCompany_txt_companyLetter"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="27 Dec,16"
        android:textSize="14sp"
        android:layout_marginRight="8dp"
        android:id="@+id/viewCompanyDate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_companyStatus"
        android:layout_marginTop="14dp"
        android:id="@+id/viewCompanyName"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-Campus"
        android:id="@+id/viewCompanyType"
       android:layout_toRightOf="@id/image_companyStatus"
        android:layout_below="@id/viewCompanyName"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A.C.E.T"
        android:id="@+id/viewCompanyHost"
        android:layout_toRightOf="@id/image_companyStatus"
        android:layout_below="@id/viewCompanyType"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="16sp"/>
</RelativeLayout>

</android.support.v7.widget.CardView>