<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_wrapper_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/companyName"
                android:fontFamily="sans-serif"
                android:textColorHint="#222222">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_name"
                    android:hint="@string/companyName"
                    android:textColor="@color/theme_color_slateGrey"
                    android:padding="26dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:maxLength="25"
                    android:capitalize="characters"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_wrapper_hostCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/host"
                android:fontFamily="sans-serif">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/host_college"
                    android:hint="@string/host"
                    android:padding="26dp"
                    android:fontFamily="sans-serif"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:maxLength="50"
                    android:textColor="@color/theme_color_slateGrey"
                    android:inputType="textCapWords"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_wrapper_DOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/estd_dor"
                android:fontFamily="sans-serif">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/placedDetails_date"
                    android:hint="@string/estd_dor"
                    android:enabled="false"
                    android:padding="26dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:textColor="@color/theme_color_slateGrey"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_dor"
                android:tint="@color/theme_color_Green"
                android:padding="26dp"
                android:id="@+id/img_dor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/theme_color_Green"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/type_spinner"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:entries="@array/type_of_rec_array"
                android:spinnerMode="dropdown"
                >
            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/theme_color_Green"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:id="@+id/studentStatus_spinner"
                android:entries="@array/company_status_array"
                android:spinnerMode="dropdown"
                >
            </Spinner>

        </LinearLayout>
      </LinearLayout>

</ScrollView>